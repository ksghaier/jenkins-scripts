pipeline {
    agent any

    options {
        disableConcurrentBuilds()
        quietPeriod 600
    }

    triggers{ pollSCM('H/15 * * * *') }

    stages {
        stage('sources') {
                steps {
                    dir("work") {
                    checkout(
                        changelog: true,
                        poll: true,
                        scm: [
                            $class: 'GitSCM',
                            branches: [[name: 'zynq-zturn']],
                            doGenerateSubmoduleConfigurations: false,
                            extensions: [
                                [ $class: 'CleanCheckout'],
                                [ $class: 'RelativeTargetDirectory',
                                    relativeTargetDir: 'linux'
                                ],
                                [ $class: 'CheckoutOption',
                                    timeout: 30
                                ],
                                [ $class: 'CloneOption',
                                    depth: 0,
                                    noTags: false,
                                    reference: '',
                                    shallow: false,
                                    timeout: 45,
                                ]
                            ],
                            submoduleCfg: [],
                            userRemoteConfigs: [
                                [url: 'https://github.com/xroumegue/linux']
                            ]
                        ]
                    )
                    checkout(
                        changelog: true,
                        poll: true,
                        scm: [
                            $class: 'GitSCM',
                            branches: [[name: 'zynq-zturn']],
                            doGenerateSubmoduleConfigurations: false,
                            extensions: [
                                [ $class: 'CleanCheckout'],
                                [ $class: 'RelativeTargetDirectory',
                                    relativeTargetDir: 'u-boot'
                                ],
                                [ $class: 'CheckoutOption',
                                    timeout: 30
                                ],
                                [ $class: 'CloneOption',
                                    depth: 0,
                                    noTags: false,
                                    reference: '',
                                    shallow: false,
                                    timeout: 45,
                                ]
                            ],
                            submoduleCfg: [],
                            userRemoteConfigs: [
                                [url: 'https://github.com/xroumegue/u-boot']
                            ]
                        ]
                    )
                    checkout(
                        changelog: true,
                        poll: true,
                        scm: [
                            $class: 'GitSCM',
                            branches: [[name: 'zynq-zturn']],
                            doGenerateSubmoduleConfigurations: false,
                            extensions: [
                                [ $class: 'CleanCheckout'],
                                [ $class: 'RelativeTargetDirectory',
                                    relativeTargetDir: 'buildroot'
                                ],
                                [ $class: 'CheckoutOption',
                                    timeout: 30
                                ],
                                [ $class: 'CloneOption',
                                    depth: 0,
                                    noTags: false,
                                    reference: '',
                                    shallow: false,
                                    timeout: 45,
                                ]
                            ],
                            submoduleCfg: [],
                            userRemoteConfigs: [
                                [url: 'https://github.com/xroumegue/buildroot']
                            ]
                        ]
                    )
                }
            }
        }

        stage("changes") {
            steps {
                dir("work/linux") {
                    lastChanges since: 'LAST_SUCCESSFUL_BUILD', format:'SIDE',matching: 'LINE'
                }
                dir("work/u-boot") {
                    lastChanges since: 'LAST_SUCCESSFUL_BUILD', format:'SIDE',matching: 'LINE'
                }
                dir("work/buildroot") {
                    lastChanges since: 'LAST_SUCCESSFUL_BUILD', format:'SIDE',matching: 'LINE'
                }
            }
        }

        stage('u-boot') {
            steps {
                dir("work/u-boot") {
                    sh '''
                        make ARCH=arm CROSS_COMPILE=arm-linux-gnu- xilinx_zynq_virt_defconfig
                        make DEVICE_TREE=zynq-zturn ARCH=arm CROSS_COMPILE=arm-linux-gnu- -j$(nproc)
                    '''
                }
            }
        }

        stage('linux') {
            steps {
                dir("work/linux") {
                    sh '''
                        make ARCH=arm CROSS_COMPILE=arm-linux-gnu- xilinx_zynq_defconfig
                        make ARCH=arm CROSS_COMPILE=arm-linux-gnu- -j$(nproc) UIMAGE_LOADADDR=0x8000 uImage dtbs modules
                    '''
                }
            }
        }

        stage('buildroot') {
            steps {
                dir("work/buildroot") {
                    sh '''
                        make zynq_zturn_ramdisk_defconfig
                        make -j$(nproc)
                    '''
                }
            }
        }

        stage('bootimage') {
            steps {
                dir("work") {
                    sh '''
                        rm -Rf images
                        mkdir images
                        cp u-boot/spl/boot.bin images/
                        cp u-boot/u-boot.img images/
                        cp linux/arch/arm/boot/uImage images/
                        cp linux/arch/arm/boot/dts/zynq-zturn.dtb images/system.dtb
                        cp linux/arch/arm/boot/dts/zynq-zturn-cosim.dtb images/system-cosim.dtb
                        cp buildroot/output/images/rootfs* images/
                    '''
                    prependToFile file: "images/genimage.cfg", content: '''
image boot.vfat {
	vfat {
		files = {
			"boot.bin",
			"u-boot.img",
			"system.dtb",
			"uImage"
		}

		file extlinux/extlinux.conf {
			image = extlinux.conf
		}
	}

	size = 32M
}

image sdcard.img {
	hdimage {
	}

	partition boot {
		partition-type = 0xC
		bootable = "true"
		image = "boot.vfat"
	}

	partition rootfs {
		partition-type = 0x83
		image = "rootfs.ext4"
	}
}
'''
                    prependToFile file: "images/extlinux.conf", content: '''
label linux
kernel /uImage
devicetree /system.dtb
append console=ttyPS0,115200 root=/dev/mmcblk0p2 rw rootwait
'''
            sh '''
                cd images

                ROOTPATH_TMP="$(mktemp -d)"
                BINARIES_DIR="$(pwd)"
                GENIMAGE_TMP="$(mktemp -d)"
                GENIMAGE_CFG="$(pwd)"/genimage.cfg

                genimage \
                    --rootpath "${ROOTPATH_TMP}"     \
                    --tmppath "${GENIMAGE_TMP}"    \
                    --inputpath "${BINARIES_DIR}"  \
                    --outputpath "${BINARIES_DIR}" \
                    --config "${GENIMAGE_CFG}"
            '''
                }
            }
        }
    }
}